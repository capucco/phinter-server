{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6"],
    "baseUrl": "./",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "outDir": "build",
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "*": ["*"]
    },
    "plugins": [
      { "transform": "typescript-transform-paths" }
    ]
  },
  "include": [
    "*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "baseUrl": "./",
      "module": "commonjs"
    }
  }
}
